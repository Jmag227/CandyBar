@model Candy
<h2>Create a New Candy</h2>
@using (Html.BeginForm("InsertCandytoDatabase", "Candy", "Post"))
{
    <input asp-for="Dbid" type="hidden" value="" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />

    <label asp-for="Manufacturer" class="control-label">Manufacturer</label>
    <input type="text" name="Manufacturer" class="form-control" value="" />

    <label asp-for="WalmartPrice" class="control-label">WalmartPrice</label>
    <input type="number" step="0.01" name="Price" class="form-control" />

    <label asp-for="Ingredients" class="control-label">Ingredients</label>
    <input type="text" name="Ingredients" class="form-control" value="" />

    <div class="form-group">
        <label for="">Select a Category</label>
        
    </div>
    <input type="submit" value="Create Candy" class="btn btn-primary" />
}