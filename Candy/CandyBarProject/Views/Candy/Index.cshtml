@model IEnumerable<Candy>

<h2>Candy</h2>

<div style="display: block">
    <a href="/Candy/InsertCandy/">Add Candy Bar</a>
</div>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Manufacturer</th>
        <th>WalmartPrice</th>
        <th>Ingredients</th> 
        <th></th>
    </tr>
    
    @foreach (var candies in Model)
    {
        <tr>
         <td><a href=/Candy/ViewCandy/@candies.Dbid>@candies.Dbid</a></td>         
         <td>@candies.Name</td>
         <td>@candies.Manufacturer</td>
         <td>@candies.WalmartPrice</td>
         <td>@candies.Ingredients</td>  
         <td><img src="~/Pics.img/ChocoIcon.png" alt="Hershy's Kiss'" width="60" height="40"></td>         
         </tr>        
    }
</table>